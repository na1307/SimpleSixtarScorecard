<MudPaper Outlined="true" Style="display: flex; justify-content: center; align-self: center; width: 97.5vw;">
    <MudStack>
        <MudSpacer />
        <MudImage Src="@ImageName" Width="217" Height="34" Style="display: flex; justify-content: center; align-self: center;" />
        <MudStack Row="true">
            <MudSpacer />
            @foreach (var difficulty in Enum.GetValues<DifficultyType>())
            {
                <ScoreInput @key="Song.Id + Mode + difficulty" Song="Song" Mode="Mode" DifficultyType="difficulty" />
            }
            <MudSpacer />
        </MudStack>
        <MudSpacer />
    </MudStack>
</MudPaper>

@code
{
    [Parameter]
    [EditorRequired]
    public required Song Song { get; init; }

    [Parameter]
    [EditorRequired]
    public Mode Mode { get; init; }

    private string ImageName => Mode switch
    {
        Mode.Lunar => "images/Lunar.png",
        Mode.Solar => "images/Solar.png",
        _ => throw new ArgumentOutOfRangeException()
    };
}
